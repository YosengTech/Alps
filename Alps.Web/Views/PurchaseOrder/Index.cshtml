@model IEnumerable<Alps.Domain.PurchaseMgr.PurchaseOrder>
@{
	Layout = null;
}
<div class="page page-form-validation clearfix">


	<ol class="breadcrumb breadcrumb-small">
		<li>Forms</li>
		<li class="active"><a href="#/PurchaseOrder">PurchaseOrder</a></li>
	</ol>
	<div class="page-wrap">
		<div class="row">
			<p>
				<a class="btn btn-default btn-sm" href="#/PurchaseOrder/Edit/0"><span class="glyphicon glyphicon-plus"></span>&nbsp;新建</a>
			</p>
			<table class="table">
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.Supplier.Name)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.OrderTime)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.Creater)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.State)
					</th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalWeight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalAmount)
                    </th>
					<th></th>
				</tr>
				<tr ng-repeat="item in items">
					<td>
						{{item.Supplier.Name}}
					</td>
					<td>
						{{item.OrderTime}}
					</td>
					<td>
						{{item.Creater}}
					</td>
					<td>
						{{item.State}}
					</td>
                    <td>
                        {{item.TotalQuantity}}
                    </td>
                    <td>
                        {{item.TotalWeight}}
                    </td>
                    <td>
                        {{item.TotalAmount}}
                    </td>
					<td>
						<a class="btn btn-default btn-sm" href="#/PurchaseOrder/Edit/{{item.ID}}"><span class="glyphicon glyphicon-pencil"></span>&nbsp;编辑</a>   
					</td>
				</tr>
			</table>
		</div>
    </div>
</div>
