@model Alps.Domain.Common.Unit
@{
	Layout = null;
}
<div class="page page-form-validation clearfix">
	<ol class="breadcrumb breadcrumb-small">
		<li>Forms</li>
		<li class="active"><a href="#/Unit">Unit</a></li>
		<li class="active"><a href="#/Unit/Edit">Edit</a></li>
	</ol>
	<div class="page-wrap">
		<div class="row">
			<div class="panel panel-lined mb30">
				<div class="panel-heading"><i>Unit</i></div>
				<div class="panel-body">
					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()
						<div class="-form-horizontal">
							<h4>Unit
								<a class="btn btn-danger btn-sm right" ng-click="deleteUnit()"><span class="glyphicon glyphicon-trash"></span>&nbsp;删除</a></h4>
							<hr />
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							@Html.HiddenFor(model => model.ID)
							<div class="form-group">
								@Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "text-uppercase small text-bold" })
								@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" , ng_model="item.Name"} })
								@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
							</div>
							<div class="form-group">
								@Html.LabelFor(model => model.Group, "Group", htmlAttributes: new { @class = "text-uppercase small text-bold" })
								@Html.EditorFor(model => model.Group, new { htmlAttributes = new { @class = "form-control" , ng_model="item.Group"} })
								@Html.ValidationMessageFor(model => model.Group, "", new { @class = "text-danger" })
							</div>
							<div class="form-group  text-center">
								<a class="btn btn-default btn-sm" ng-click="goBack()"><span class="glyphicon glyphicon-chevron-left"></span>&nbsp;返回</a>
								<a class="btn btn-primary btn-sm" ng-click="saveUnit()"><span class="glyphicon glyphicon-save"></span>&nbsp;保存</a>
							</div>
						</div>
					}
				</div>
			</div>
		</div>
	</div>
</div>
