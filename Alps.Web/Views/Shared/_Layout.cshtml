<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body id="app" ng-app="Alps" ng-controller="RootCtrl" class="app">
    <header class="site-head clearfix" id="site-head" ng-controller="HeaderCtrl">
        <!-- linked header (static) view -->
        @Html.Partial("_header")
    </header>
    <toaster-container toaster-options="{'time-out': 3000, 'close-button':true,'newest-on-top':false}"></toaster-container>
    <div class="main-container clearfix">
        <aside class="nav-wrap " id="site-nav" ng-controller="NavCtrl" custom-scrollbar>
            @Html.Partial("_nav")
        </aside>


        <div class="content-container" id="content">
            @RenderBody()

        </div>
        <footer id="site-foot" class="site-foot clearfix">
            <p class="left">&copy; Copyright 2014 <strong>APPBOARD</strong>, All rights reserved.</p>
            <p class="right">v1.1</p>
        </footer>
    </div>
