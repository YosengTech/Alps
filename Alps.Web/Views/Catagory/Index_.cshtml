
@model IEnumerable<Alps.Domain.ProductMgr.Catagory>
@{
	Layout=null;
}
<div class="page page-form-validation clearfix" ng-controller="CatagoryCtrl">
    <ol class="breadcrumb breadcrumb-small">
        <li>Forms</li>
        <li class="active"><a href="#/Catagory/Index">Catagory</a></li>
    </ol>
    <div class="page-wrap">
        <div class="row">



            <p>
                <a class="btn btn-default btn-sm" href="#/Catagory/Create"><span class="glyphicon glyphicon-plus"></span>&nbsp;新建</a>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Parent.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>

                <tr  ng-repeat="item in items">
                    <td>
                        {{item.Parent.Name}}
                    </td>
                    <td>
                        {{item.Name}}
                    </td>
                    <td>
                        <a class="btn btn-default btn-sm" href="#/Catagory/Edit/{{item.ID}}"><span class="glyphicon glyphicon-pencil"></span>&nbsp;编辑</a>
                        <a class="btn btn-default btn-sm" href="#/Catagory/Delete/{{item.ID}}"><span class="glyphicon glyphicon-trash"></span>&nbsp;删除</a>
                    </td>
                </tr>

            </table>
        </div>
    </div>

</div>
